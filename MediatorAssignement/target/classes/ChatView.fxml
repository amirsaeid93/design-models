<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatController">
    <children>
        <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS" />
        <TextField fx:id="messageField" promptText="Type a message..." />
        <ChoiceBox fx:id="recipientChoiceBox" />
        <Button fx:id="sendButton" text="Send" onAction="#sendMessage" />
    </children>
</VBox>
